{
  "schemaVersion": 1,
  "id": "triggerhappy",
  "version": "${version}",

  "name": "Trigger-Happy",
  "description": "A simple gun mod inspired by the likes of Guns 'Without Roses'",
  "authors": [
    "Elidhan"
  ],
  "contact": {
    "sources": "https://github.com/elidhan/Trigger-Happy"
  },

  "license": "CC-BY-4.0",
  "icon": "assets/triggerhappy/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.elidhan.triggerhappy.TriggerHappy"
    ],
    "client": [
      "net.elidhan.triggerhappy.TriggerHappyClient"
    ],
    "mm:early_risers": [
